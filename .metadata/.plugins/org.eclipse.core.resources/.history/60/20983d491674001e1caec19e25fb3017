import java.util.Scanner;

public class Q27 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);

        // Get the total purchase amount from the user
        System.out.print("Enter the total purchase amount: $");
        double purchaseAmount = scanner.nextDouble();

        // Calculate the discount based on the purchase amount
        double discount = calculateDiscount(purchaseAmount);

        // Display the discount amount and the final amount to pay
        System.out.println("Discount: $" + discount);
        double finalAmount = purchaseAmount - discount;
        System.out.println("Final Amount to Pay: $" + finalAmount);

        scanner.close();
    }

    public static double calculateDiscount(double purchaseAmount) {
        double discount = 0.0;

        if (purchaseAmount >= 100) {
            // Apply a 10% discount for purchases of $100 or more
            discount = purchaseAmount * 0.10;
        } else if (purchaseAmount >= 50) {
            // Apply a 5% discount for purchases between $50 and $99.99
            discount = purchaseAmount * 0.05;
        }

        return discount;
    }
}






	
